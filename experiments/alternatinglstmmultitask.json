{
    "dataset_reader": {
      "type": "csv_classification_reader",
      "delimiter": "\t",
  
      "pos_input": 2,
      "pos_gold_label": 1,
      
      "tokenizer": {
        "word_splitter": {
          "language": "en"
        }
      },
      "token_indexers": {
        "elmo": {
          "type": "elmo_characters"
        }
      }
    },
    "train_data_path": {
        "taskA" : "dataset/SemEval2018-T4-train-taskA_emoji.txt",
        "taskB" : "dataset/SemEval2018-T4-train-taskB_emoji.txt",
        "emb" : "dataset/X_deepemoji.npy"
    },
    "test_data_path": {
      "taskA" : "dataset/SemEval2018-T3_gold_test_taskA_emoji.txt",
      "taskB" : "dataset/SemEval2018-T3_gold_test_taskB_emoji.txt",
      "emb" : "dataset/encoding_test.npy"
    },
    "evaluate_on_test":true,
    "model": {
      "type": "irony_classifier",
      "class_weights" : [1.0, 2.0, 3.0, 4.0],
      "text_field_embedder": {
            "elmo": {
                "type": "elmo_token_embedder",
                "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_options.json",
                "weight_file": "/home/harsh/NLP tools/irony-detection-allennlp-basic/elmo/elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5",
                "do_layer_norm": false,
                "dropout": 0.5
            }
      },
      "tweet_encoder": {
        "type": "stacked_bidirectional_lstm",
        "input_size": 1024,
        "hidden_size": 300,
        "recurrent_dropout_probability": 0.2,
        "num_layers": 3
      },
      "classifier_feedforward": {
        "input_dim": 3504,
        "num_layers": 1,
        "hidden_dims": [500],
        "activations": ["relu"],
        "dropout": [0.2]
      }
    },
    "iterator": {
      "type": "bucket", 
      "sorting_keys": [["tweet", "num_tokens"]],
      "batch_size":32},
    "trainer": {
      "optimizer": {
        "type": "adam"
      },
      "num_epochs": 3,
      "patience": 1,
      "cuda_device": 0
    }
  }